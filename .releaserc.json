{
    "branches": [
        "master"
    ],
    "plugins": [
        "@semantic-release/commit-analyzer",
        "@semantic-release/release-notes-generator",
        [
            "@semantic-release/changelog",
            {
                "changelogFile": "CHANGELOG.md"
            }
        ],
        [
            "@semantic-release/exec",
            {
                "prepareCmd": "sed -i '' 's/^ \\* Version: .*/ * Version:         ${nextRelease.version}/' easy-categories-shift64.php || sed -i 's/^ \\* Version: .*/ * Version:         ${nextRelease.version}/' easy-categories-shift64.php",
                "publishCmd": "bash build-zip.sh ${nextRelease.version}"
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": [
                    "CHANGELOG.md",
                    "easy-categories-shift64.php",
                    "package.json",
                    "package-lock.json"
                ],
                "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
            }
        ],
        [
            "@semantic-release/github",
            {
                "assets": [
                    {
                        "path": "easy-categories-shift64.zip",
                        "label": "easy-categories-shift64-${nextRelease.version}.zip"
                    }
                ]
            }
        ]
    ]
}